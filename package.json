{
  "name": "project-rearrange",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "run-p build:pug2html watch:pug2html watch:scss2cssprefix watch:img watch:js watch:font watch:video start:server",
    "start:server": "browser-sync start -s public -w src/*.html src/css/*.css src/js/*.js",
    "watch:pug2html": "nodemon -e pug -x \"yarn build:pug2html\"",
    "watch:scss2cssprefix": "chokidar \"src/scss/\" --command \"yarn run build:scss2cssprefix\" --initial",
    "watch:img": "chokidar \"src/img/**/*\" --command \"yarn run build:img && yarn run copy:img && yarn run copy:wpimg\" --initial",
    "watch:js": "chokidar \"src/js/**/*\" --command \"yarn run copy:js\" --initial",
    "watch:font": "chokidar \"src/font/**/*\" --command \"yarn run copy:font\" --initial",
    "watch:video": "chokidar \"src/video/**/*\" --command \"yarn run copy:video\" --initial",
    "build:img": "node imagemin.js",
    "build:pug2html": "pug src/views/pages --hierarchy -o public/ -w -P -b src/views",
    "build:js": "uglifyjs src/js/**/* -o public/assets/js/rearrange.js",
    "build:scss2cssprefix": "run-s build:scss2css build:css2cssprefix",
    "build:scss2css": "node-sass src/scss/style.scss --importer node_modules/node-sass-globbing/index.js public/assets/css/style.css --output-style compressed public/assets/css/",
    "build:css2cssprefix": "postcss public/assets/css/style.css -u autoprefixer -o public/assets/css/style.css && yarn run copy:css",
    "build:dev": "run-p build:pug2html build:scss2css build:css2cssprefix build:img copy:img copy:js",
    "build:prod": "",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "format:html": "js-beautify -s 2 -r -f \"public/**/*.html\"",
    "format:all": "run-p format:scss format:html",
    "min:css": "cleancss -o public/assets/css/style.css public/assets/css/style.css",
    "min:js": "uglifyjs public/assets/js/rearrange.js -o public/assets/js/rearrange.js",
    "min:all": "run-p min:css min:js",
    "copy:js": "cpx \"src/js/**/*.js\" public/assets/js && cpx \"public/assets/js/**/*\" rearrange/assets/js",
    "copy:css": "cpx \"public/assets/css/**/*\" rearrange/assets/css",
    "copy:font": "cpx \"src/font/**/*\" public/assets/font && cpx \"public/assets/font/**/*\" rearrange/assets/font",
    "copy:img": "cpx \"src/img/**/*\" public/assets/img",
    "copy:video": "cpx \"src/video/**/*\" public/assets/video",
    "copy:wpimg": "cpx \"src/img/**/*\" rearrange/assets/img",
    "copy:assets": "cpx \"public/assets/**/*\" rearrange/assets",
    "delete:map": "rimraf public/**/*.map",
    "delete:public": "rimraf public",
    "prepare:all": "run-p min:js min:css delete:map"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.2",
    "clean-css-cli": "^4.3.0",
    "cpx": "^1.5.0",
    "imagemin-cli": "^5.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "js-beautify": "^1.10.1",
    "node-sass": "^4.12.0",
    "node-sass-globbing": "^0.0.23",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.9.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "jstransformer-escape-html": "^1.1.0",
    "jstransformer-pug": "^0.3.0",
    "normalize.css": "^8.0.1",
    "yakuhanjp": "^3.3.1"
  }
}
